QLineEdit {
   border: none;
   min-height: 40px;
   font-size: 20px;
   padding: 0 2px;
   color: black;
   background: white;
   border-bottom: 2px solid gray;
   selection-background-color: darkgray;
}

QLabel {
    color: black;
}

QLineEdit:focus {
   border-bottom: 2px solid green;
}

QPushButton {
    color: green;
    font-size: 16px;
    height: 30px;
    background: white;
    border: none;
}

QPushButton:hover {
    font-size: 26px;
}
